<div class="row text-center">
    {{#link-to 'questions/new' classNames='btn btn-default btn-lg'}}ASK A QUESTION{{/link-to}}
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <ul class="link-list">
      {{#each question in model}}
        {{#link-to 'question' question}}
          <li>
            <span class="question">{{question.text}}</span>
            <span class="author">Asked by {{question.author}}</span>
          </li>
          {{/link-to}}
      {{/each}}
    </ul>
  </div>
</div>
